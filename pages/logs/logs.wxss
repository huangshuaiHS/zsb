
.bg {
  height: 100vh;
  background-repeat: no-repeat;
  background-size: cover;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1;
}
.container {
  font-size: 32rpx;
  color: #fff;
}
/* 用户信息 */
.userinfo {
  margin-top: 20rpx;
  height: 240rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 36rpx;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}
.userinfo-nickname::after {
  border: none;
}